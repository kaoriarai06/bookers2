<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name</h4>
  <%= @user.name %>
  
  <h4>introduction</h4>
  <%= @user.introduction %>

  <%= button_to "edit", edit_user_path(current_user.id), method: :get %>
  

  
  <h1>New book</h1>

  <%= form_with model: @book do |f| %>
    
    <h4>title</h4>
      <%= f.text_field :title %>
    
    <h4>opinion</h4>
      <%= f.text_area :body %>
      
    <%= f.submit 'Create Book' %>
  
  <% end %>
  
  
  <h1>Book detail</h1>
    <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
    <p><%= @book.title %></p>
    <p><%= @book.body %></p>
    
    
    <p>編集ボタン</p>
    <p>削除ボタン</p>
    
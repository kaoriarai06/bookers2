<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name</h4>
  <%= @user.name %>
  
  <h4>introduction</h4>
  <%= @user.introduction %>

  <%= button_to "edit", edit_user_path(current_user.id), method: :get %>
  


<h1>New book</h1>

  <%= form_with model: @book do |f| %>
    
    <h4>title</h4>
      <%= f.text_field :title %>
    
    <h4>opinion</h4>
      <%= f.text_area :body %>
      
    <%= f.submit 'Create Book' %>
  
  <% end %>
 
 <h1>Books</h1> 
 
  <% @books.each do |book| %>
    <div>
      <%= image_tag book.user.get_profile_image(100,100) %>
      <p>title</p>
        <%= book.title %>
      <p>opinion</p>
        <%= book.body %>
    </div>
  <% end %>
  
  
<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1>User info</h1>
  <%= form_with model: @user do |f| %>
    <h4>name</h4>
    <%= f.text_field :name %>
    
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
    
    <%= f.submit 'edit' %>
  <% end %>


<h1>New book</h1>

  <%= form_with model: @book do |f| %>
    
    <h4>title</h4>
      <%= f.text_field :title %>
    
    <h4>opinion</h4>
      <%= f.text_area :body %>
      
    <%= f.submit 'Create Book' %>
  
  <% end %>
  
  <% @books.each do |book| %>
  <div>
    <p>title</p>
      <%= book.title %>
    <p>opinion</p>
      <%= book.body %>
  </div>
<% end %>
  
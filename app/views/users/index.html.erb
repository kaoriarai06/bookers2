<h1>users/indexページ</h1>

<h1>User info</h1>


  
<h1>New book</h1>
<%= form_with model: @book do |f| %>
    
    <h4>title</h4>
      <%= f.text_field :title %>
    
    <h4>opinion</h4>
      <%= f.text_area :body %>
      
    <%= f.submit 'Create Book' %>
  
  <% end %>
  
<h1>Users</h1>
<% @users.each do |user| %>
  <%= image_tag user.get_profile_image(100,100) %>
  
  <p><%= user.name %></p>
  
  <%= link_to "show", user_path(user) %>

<% end %>
  
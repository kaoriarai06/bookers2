<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<p>log in,sign upしたらここにいく</p>

<h1>User info</h1>
  <%= form_with model: @user do |f| %>
    <h4>name</h4>
    <%= f.text_field :name %>
    
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
    
    <%= f.submit 'edit' %>
  <% end %>


<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<% @books.each do |book| %>
  <div>
    <p>投稿者の名前</p>
    <p>title</p>
      <%= book.title %>
    <p>opinion</p>
      <%= book.body %>
  </div>
<% end %>
</div>
